{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/server/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/app/**/*",
    "src/components/**/*",
    "src/lib/webgpu/**/*"
  ]
}